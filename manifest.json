{
    "name": "Mashiro",
    "description": "Enable Popular Mode on Pixiv",
    "version": "0.2.0",
    "manifest_version": 3,
    "icons": {
        "16": "./images/mashiro.png",
        "32": "./images/mashiro.png",
        "64": "./images/mashiro.png",
        "128": "./images/mashiro.png"
    },
    "background": {
        "scripts": ["/background.js"]
    },
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "https://www.pixiv.net/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.pixiv.net/*"
            ],
            "js": [
                "jquery-3.6.0.min.js"
            ]
        }
    ]
}
